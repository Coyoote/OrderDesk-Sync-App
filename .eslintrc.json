{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "no-shadow": "error",
      "no-var": "error",
      "no-use-before-define": "error",
      "no-console": "off",
      "prefer-const": "error",
      "newline-before-return": "error",
      "no-multiple-empty-lines": "error",
      "no-mixed-operators": "error",
      "max-len": [
        "error",
        { "code": 80, "ignoreComments": true, "ignoreTemplateLiterals": true }
      ],
      "func-names": "error",
      "space-before-function-paren": ["error", "never"],
      "no-multi-assign": 0,
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": ["const", "let", "var"],
          "next": "*"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": ["return", "block-like", "multiline-expression"]
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": ["const", "let", "var"]
        },
        {
          "blankLine": "any",
          "prev": ["const", "let", "var"],
          "next": ["const", "let", "var"]
        }
      ]
    }
}
